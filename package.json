    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.2",
    "prettier-standard": "^16.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-text-mask": "^5.4.3",
    "rollup": "^1.27.13",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",

    "react-dom": ">= 16.0.0 < 17.0.0",
    "react-text-mask": ">= 5.4.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-common-types": "^0.2.27",
    "@fortawesome/fontawesome-svg-core": "^1.2.27",

    "@fortawesome/react-fontawesome": "^0.1.8",
    "@olavoparno/jest-badges-readme": "^1.4.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-fontawesome": "^1.6.4",
    "@types/react-text-mask": "^5.4.6",
    "bulma": "^0.8.0",
